= simple_form_for @pin, hmtl: { multipart: true } do |f|
	- if @pin.errors.any?
		#errors
			%h2
			= pluralize(@pin.errors.count, "error")
			prevented this Pin from saving
			%ul
				- @pin.errors.full_messages.each do |msg|
					%li= msg
	
	.form-group
		= f.input :image, input_hmtl: { class: 'form-control' }

	.form-group
		= f.input :title, input_hmtl: { class: 'form-control' }

	.form-group
		= f.input :description, input_hmtl: { class: 'form-control' }

	= f.button :submit, class: "btn btn-primary"